<h2> Welcome to your profile</h2>

<h4>Your blogs</h4>

<div class="container">

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">

{{#each blogs}}
  <div class="col">

    <div class="card" style="width: 18rem;">
      <div class="card-body">

        <h3>
          <a href="blog/{{_id}}">

            {{title}}
          </a>
        </h3>
        <h5>{{problemStatement}}</h5>
      </div>
    </div>
  </div>

{{/each}}